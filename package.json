{
  "name": "syntera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "echo 'ERROR: Use pnpm --filter for specific service builds or railway.json for deployment' && exit 1",
    "build:frontend": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "tsx scripts/check-and-seed-mongodb.ts",
    "db:delete-conversations": "tsx scripts/delete-all-conversations.ts",
    "db:clear-all": "tsx scripts/clear-mongodb-data.ts",
    "test:load": "tsx scripts/load-test.ts",
    "build:all": "pnpm run build:shared && pnpm run build:chat && pnpm run build:agent && pnpm run build:kb && pnpm run build:avatar && pnpm run build:widget",
    "build:shared": "pnpm --filter @syntera/shared build",
    "build:chat": "cd services/chat && pnpm build",
    "build:agent": "cd services/agent && pnpm build",
    "build:kb": "cd services/knowledge-base && pnpm build",
    "build:avatar": "cd services/avatar-service && pnpm build",
    "build:widget": "cd widget && pnpm build",
    "dev:all": "concurrently -n \"CHAT,AGENT,KB,AVATAR,VOICE-AGENT,FRONTEND\" -c \"blue,green,yellow,red,cyan,magenta\" \"pnpm run dev:chat\" \"pnpm run dev:agent\" \"pnpm run dev:kb\" \"pnpm run dev:avatar\" \"pnpm run dev:voice-agent\" \"pnpm run dev:frontend\"",
    "dev:chat": "cd services/chat && pnpm dev",
    "dev:agent": "cd services/agent && pnpm dev",
    "dev:kb": "cd services/knowledge-base && pnpm dev",
    "dev:avatar": "cd services/avatar-service && pnpm dev",
    "dev:voice-agent": "cd services/voice-agent && python src/main.py --mode both",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:widget": "cd widget && pnpm dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "tunnel:quick": "cloudflared tunnel --url http://localhost:4002",
    "tunnel:start": "powershell -ExecutionPolicy Bypass -File scripts/start-cloudflare-tunnel.ps1",
    "tunnel:quick:start": "powershell -ExecutionPolicy Bypass -File scripts/start-cloudflare-quick-tunnel.ps1",
    "services:dev": "concurrently \"pnpm run service:auth\" \"pnpm run service:agent\" \"pnpm run service:crm\"",
    "service:auth": "cd services/auth && pnpm run dev",
    "service:agent": "cd services/agent && pnpm run dev",
    "service:crm": "cd services/crm && pnpm run dev"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^5.17.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "livekit-client": "^2.0.0",
    "livekit-server-sdk": "^2.0.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.49.0",
    "recharts": "^2.10.0",
    "socket.io-client": "^4.6.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0"
}
